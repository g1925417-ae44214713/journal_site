<h1>新規論文投稿</h1>

<% if @article.errors.any? %>
  <p><b><%= @article.errors.count %>件のエラーがあります</b></p>
  <ul>
  <% @article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: @article, local: true do |form| %>

  <p>論文タイトル<br>
    <%= form.text_field :title %>
  </p>

  <p>
    本文<br>
    <%= form.text_area :body, :size=>"40x8" %>
  </p>

  <div class="actions">
  <%= form.submit "投稿", class: 'sign-btn' %>
  </div>

  <% end %>
